<script>
function select(id) {
    window.location.assign(`/planning/dashboard/${id || ""}`);
}
</script>
<div class="mt-2  container-fluid">
    <div class="d-flex justify-content-center">
        <div class="p-1 mr-auto">
            <h3>Dashboard</h3>
        </div>
        <div class="p-1">
            <select class="custom-select custom-select-sm" id="site" name="site" onchange="select(this.value)">
                <option selected disabled hidden>Liste por Obra</option>
                <option value="">Nenhum(a)</option>
                {{#each warehouses}}
                <option value="{{_id}}" {{#if_eq ../site _id}}selected{{/if_eq}}>
                    {{description}}
                </option>
                {{else}}
                <option value="0">Nenhuma obra registrado</option>
                {{/each}}
            </select>
        </div>
    </div>

    {{#json typeChart}}
    <input type="hidden" id="typeChart" value="{{this}}">
    {{/json}}

    {{#json groupChart}}
    <input type="hidden" id="groupChart" value="{{this}}">
    {{/json}}

    {{#json warehouseChart}}
    <input type="hidden" id="warehouseChart" value="{{this}}">
    {{/json}}

    {{#json statusChart}}
    <input type="hidden" id="statusChart" value="{{this}}">
    {{/json}}

 <div class="d-flex justify-content-center">
        <div class="row justify-content-center">
            {{#each warehouseCard}}
            <div class="col-md-4 mt-1">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-center">
                            <div class="p-0 mr-auto">
                                <h4 class="card-title text-primary">{{warehouse.description}}</h4>
                                <p class="card-text text-secondary"><small
                                        class="px-1"><b>{{warehouse.plant}}</b></small><small><b>{{warehouse.costCenter}}</b></small>
                                </p>
                            </div>
                            <div class="p-0">
                                <img src="{{warehouse.image}}" style="width: 6rem;" alt="" class="rounded">
                            </div>
                        </div>
                        <hr>
                        <h6 class="card-title">Status Projeto: {{warehouse.active}}</h6>
                        <h6 class="card-title">Cliente: {{warehouse.client}}</h6>
                        <p class="card-text"><small>Data Mobilização: {{warehouse.createdAt}}</small></p>
                        <p class="card-text"><small>Data Desmobilização: {{warehouse.active}}</small></p>
                        <hr>
                        <div class="form-group row px-3">
                            <p class="card-text"><small>IC:: {{warehouse.ic}}</small></p>
                        </div>
                        <hr>
                        <div class="form-group row px-3">
                            <small class="mr-1"><b>Itens Mobilizados: </b></small><input style="width:30%"
                                class="NumberInt car" type="number" value="{{qty}}">
                        </div>
                        <div class="form-group row px-3">
                            <small class="mr-1"><b>Itens em Estoque (Und.): </b></small><input style="width:30%"
                                class="NumberInt car" type="number" value="{{qtyStock}}">
                        </div>
                        <div class="form-group row px-3">
                            <small class="mr-1"><b>Itens Reservados: </b></small><input style="width:30%"
                                class="NumberInt car" type="number" value="{{qtyReservation}}">
                        </div>
                        <div class="form-group row px-3">
                            <small class="mr-1"><b>Peso Kg (Mobilizado): </b></small><input style="width:30%"
                                class="NumberDec car" type="number" value="{{weightKg}}">
                        </div>
                        <div class="form-group row px-3">
                            <small class="mr-1"><b>Valores Ferramental: </b></small><small>R$ </small><input
                                style="width:30%" class="NumberDec car" type="number" value="{{faceValue}}">
                        </div>

                        <a href="#" class="btn btn-primary btn-sm">Ver estoque</a>
                    </div>
                </div>
            </div>
            {{else}}
            <h6>Nenhum Site Registrado</h6>
            {{/each}}
        </div>
    </div>
    <!--CHART JS-->
    <div class="row justify-content-center">
        <div class="col-md-4 mb-1 chart-container " style="position: relative; height:100%; width:100%">
            <div class="card">
                <canvas id="line-chart" width="100" height="70"></canvas>
            </div>
        </div>
        <div class="col-md-4 mb-1 chart-container" style="position: relative; height:100%; width:100%">
            <div class="card">
                <canvas id="pie-chart" width="100" height="70"></canvas>
            </div>
        </div>
        <div class="col-md-4 mb-1 chart-container" style="position: relative; height:100%; width:100%">
            <div class="card">
                <canvas id="bar-chart" width="100" height="70"></canvas>
            </div>
        </div>
    </div>

    <!--CHART JS-->
    <div class="row justify-content-center">
        <div class="col-md-4 mb-1 chart-container" style="position: relative; height:100%; width:100%">
            <div class="card">
                <canvas id="status-chart" width="100" height="70"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- CHART JS  -->
<script src="/js/chart.js"></script>
<script type="text/javascript">
    const data = JSON.parse(document.getElementById("typeChart").value);
    const labels = [];
    const values = [];
    data.forEach(typeChart => {
        labels.push(typeChart.type[0].description);
        values.push(typeChart.quant);
    });
    window.barChart.config.data.labels = labels;
    window.barChart.config.data.datasets.pop();
    window.barChart.config.data.datasets.push({
        label: "Quantidade (unidade)",
        data: values,
        backgroundColor: [
            '#00008B',
            '#0000FF',
            '#3A5FCD',
            '#4169e1',
            '#1874CD',
            '#00BFFF',
            '#8DB6CD',
            '#6C7B8B',
            '#C6E2FF',
        ],
    });
    window.barChart.update();


    const data2 = JSON.parse(document.getElementById("groupChart").value);
    const labels2 = [];
    const values2 = [];
    data2.forEach(groupChart => {
        labels2.push(groupChart.group[0].description);
        values2.push(groupChart.quant);
    });
    window.pieChart.config.data.labels = labels2;
    window.pieChart.config.data.datasets.pop();
    window.pieChart.config.data.datasets.push({
        label: "Quantidade (unidade)",
        data: values2,
        backgroundColor: [
            '#363636',
            '#696969',
            '#2F4F4F',
            '#CDC8B1',
            '#000000',
            '#8B0000',
            '#FFA500',
            '#808080',
            '#696969',
            '#000000',

        ],
    });
    window.pieChart.update();



    const data3 = JSON.parse(document.getElementById("warehouseChart").value);
    const labels3 = [];
    const values3 = [];
    data3.forEach(warehouseChart => {
        labels3.push(warehouseChart.warehouse[0].description);
        values3.push(warehouseChart.quant);
    });
    window.lineChart.config.data.labels = labels3;
    window.lineChart.config.data.datasets.pop();
    window.lineChart.config.data.datasets.push({
        label: "Quantidade (unidade)",
        data: values3,
        backgroundColor: [
            '#00008B',
            '#0000FF',
            '#3A5FCD',
            '#4169e1',
            '#1874CD',
            '#00BFFF',
            '#8DB6CD',
            '#6C7B8B',
            '#C6E2FF',

        ],
    });
    window.lineChart.update();

    const data4 = JSON.parse(document.getElementById("statusChart").value);
    const labels4 = [];
    const values4 = [];
    data4.forEach(statusChart => {
        labels4.push(statusChart.status[0].description);
        values4.push(statusChart.quant);
    });
    window.statusChart.config.data.labels = labels4;
    window.statusChart.config.data.datasets.pop();
    window.statusChart.config.data.datasets.push({
        label: "Quantidade (unidade)",
        data: values4,
        backgroundColor: [
            '#2F4F4F',
            '#696969',
            '#708090',
        ],
    });
    window.statusChart.update();

</script>