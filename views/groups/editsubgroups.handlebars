<div class="addsubgroups container mt-2">
    <h3>Editar Subgrupo</h3>
    <hr>
    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}
    <!--<div class="card">
        <div class="card-body">-->
    <form class="mt-5" method='post' enctype="multipart/form-data" action="/upload">
        <div class="form-row">
            <div class="form-group col-md-6">
                <div class="text-center">
                    <img src="https://chart.googleapis.com/chart?chs=200x200&cht=qr&chl={{subgroup.qrcode}}"
                        width="200px" class="img-fluid rounded" alt="Responsive image">
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="text-center">
                    <img src="{{subgroup.image}}" width="200px" class="avatar img-fluid rounded" alt="Responsive image">
                    <input type="file" accept="image/*" name="file" id="file"
                        class="custom-file-input btn-file text-center center-block file-upload">
                    <input type='submit' class='btn btn-primary' value='Upload de imagem'>
                </div>
            </div>
        </div>
        <hr>
    </form>
    <form action="/groups/subgroups/edit/" method="POST">
        <div class="form-row">
            <div class="form-group col-md-12">
                <input type="hidden" class="form-control" id="id" name="id" placeholder="Id" value="{{subgroup._id}}">
                <input type="hidden" class="form-control" id="qrcode" name="qrcode" placeholder="QrCode do group"
                    value="{{subgroup.qrcode}}">
                <input type="hidden" class="form-control mt-2" name="image" id="image" value="{{subgroup.image}}">
                <label for="description">Descrição:</label>
                <input type="text" class="form-control" id="description" name="description"
                    placeholder="Descrição do group" value="{{subgroup.description}}" onkeyup="qrcodeFormat()">
            </div>
            <div class="form-group col-md-12">
                <label for="group">Grupo:</label>
                <select class="custom-select" id="group" name="group" value="{{subgroup.group}}">
                    <option selected disabled value="">Selecione...</option>
                    {{#each groups}}
                    <option {{#if_eq ../subgroup.group _id}}selected{{/if_eq}} value="{{_id}}">{{description}}</option>
                    {{else}}
                    <option value="0">Nenhum Subgrupo registrado</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <input type="hidden" class="form-control" id="date" name="date" placeholder="date"
            value="{{#formatDate date}}{{/formatDate}}">
        <div class="form-row align-items-center">
            <!-- <div class="col-auto my-1">
                <select class="custom-select mr-sm-2" id="active" name="active">
                    <option Disabled selected>Ativar...</option>
                    <option value="true">Sim</option>
                    <option value="false">Não</option>
                </select>
            </div> -->
            <div class="col-auto my-1">
                <button type="submit" class="btn btn-success">Salvar <i class="fas fa-share"></i></button>
            </div>
        </div>
        <hr>
    </form>
</div>