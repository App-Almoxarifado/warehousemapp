<div class="mt-2 container-fluid">
  {{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
  {{else}}
  {{/each}}
  <!--<canvas class="line-chart"></canvas>-->
  <div class="d-none d-md-none d-print-block">
    <div class="d-flex justify-content-center">

      <h3>Tipos de Equipamento</h3>
    </div>
  </div>
  <div class="d-none d-md-block d-print-none">
    <div class="d-flex justify-content-center">
      <div class="p-1 mr-auto">
        <h3>Tipos de Equipamento</h3>
      </div>

      <div class="p-0 mr-1">
        <a href="/groups">
          <button type="button" class="btn btn-primary btn-sm">
            Lista
            <i class="fas fa-th-list"></i>
          </button>
        </a>
      </div>
      <div class="p-0 mr-1">
        <a href="/groups/table">
          <button type="button" class="btn btn-primary btn-sm">
            Tabela
            <i class="fas fa-table"></i>
          </button>
        </a>
      </div>
      <div class="p-0">
        <a href="/groups/add">
          <button class="mr-2 btn btn-success btn-sm" data-toggle="tooltip" data-placement="bottom" title="Cadastre ">
            Cadastre um novo tipo <i class="fas fa-paper-plane"></i>
          </button>
        </a>
      </div>
    </div>


    <div class="d-flex justify-content-center">
      <div class="p-1 mr-auto">
        <div class="form-group row">
          <label for="client" class="col-sm-7 col-form-label col-form-label-sm">Itens p/ página</label>
          <div class="col-sm-5">
            <select class="custom-select custom-select-sm" id="limit" name="limit" onchange="setLimit()">
              <option value="5" {{#if_eq limit 5}}selected{{/if_eq}}>5</option>
              <option value="10" {{#if_eq limit 10}}selected{{/if_eq}}>10</option>
              <option value="25" {{#if_eq limit 25}}selected{{/if_eq}}>25</option>
              <option value="50" {{#if_eq limit 50}}selected{{/if_eq}}>50</option>
              <option value="100" {{#if_eq limit 100}}selected{{/if_eq}}>100</option>
            </select>
          </div>
        </div>
      </div>
      <div class="p-1 ">
        <p><small>Visualizar Colunas</small></p>
      </div>
      <div class="p-1 ">

        <select class="custom-select custom-select-sm" name="SelectOptions" id="SelectOptions">
          <option selected>Escolher...</option>
          <option selected>Mostrar Colunas</option>
          <option value="tbGroups01">Id</option>
          <option value="tbGroups02">imagem</option>
          <option value="tbGroups03">QrCode</option>
          <option value="tbGroups04">Descrição</option>
          <option value="tbGroups05">Data de Lançamento</option>
          <option value="tbGroups06">Usuário Lançamento</option>
          <option value="tbGroups07">Email Lançamento</option>
          <option value="tbGroups08">Data Edição</option>
          <option value="tbGroups09">ID Usuário Edição</option>
          <option value="tbGroups10">Email Edição</option>
          <option value="tbGroups11">Ações</option>
        </select>
      </div>

      <div class="p-1">
        <div class="input-group input-group-sm mb-3">
          <input type="text-sm" class="form-control" id="search" name="search" placeholder="Pesquise aqui...">
        </div>
      </div>

      <div class="p-1">
        <button type="button" class="btn btn-primary btn-sm" onclick="search()">
          <i class="fa fa-search" aria-hidden="true"></i>
        </button>
      </div>

    </div>
  </div>



  <div class="d-block d-md-none d-print-none">
    <div class="d-flex justify-content-center">
      <h3>Tipos de Equipamento</h3>
      <hr>
    </div>

    <div class="d-flex justify-content-center">
      <a href="/groups/add">
        <button class="mr-2 btn btn-success btn-sm" data-toggle="tooltip" data-placement="bottom"
          title="Cadastre um novo tipo">
          Cadastre um novo tipo <i class="fas fa-paper-plane"></i>
        </button>
      </a>
    </div>


    <div class="d-flex justify-content-center">
      <div class="p-1">
        <div class="input-group input-group-sm mb-3">
          <input type="text-sm" class="search form-control" id="searchMobile" name="searchMobile"
            placeholder="Pesquise aqui..." onchange="this.value=this.value.toLowerCase()" />
        </div>
      </div>

      <div class="p-1 ">
        <button type="button" class="btn btn-primary btn-sm" onclick="search()">
          <i class="fa fa-search" aria-hidden="true"></i>
        </button>
      </div>
    </div>


    <div class="d-flex justify-content-center">
      <div class="p-1">
        <label for="client" class="col-sm-7 col-form-label col-form-label-sm">Itens p/ página</label>
        <div class="col-sm-5">
          <select class="custom-select custom-select-sm" id="limitMobile" name="limitMobile" onchange="setLimit()">
            <option value="5" {{#if_eq limit 5}}selected{{/if_eq}}>5</option>
            <option value="10" {{#if_eq limit 10}}selected{{/if_eq}}>10</option>
            <option value="25" {{#if_eq limit 25}}selected{{/if_eq}}>25</option>
            <option value="50" {{#if_eq limit 50}}selected{{/if_eq}}>50</option>
            <option value="100" {{#if_eq limit 100}}selected{{/if_eq}}>100</option>
          </select>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <div class="p-1 ">
        <select class="custom-select custom-select-sm" name="SelectOptionsMobile" id="SelectOptionsMobile">
          <option selected>Mostrar Colunas</option>
          <option value="tbGroups01">Id</option>
          <option value="tbGroups02">imagem</option>
          <option value="tbGroups03">QrCode</option>
          <option value="tbGroups04">Descrição</option>
          <option value="tbGroups05">Data de Lançamento</option>
          <option value="tbGroups06">Usuário Lançamento</option>
          <option value="tbGroups07">Email Lançamento</option>
          <option value="tbGroups08">Data Edição</option>
          <option value="tbGroups09">Usuário Edição</option>
          <option value="tbGroups10">Email Edição</option>
          <option value="tbGroups11">Ações</option>
        </select>
      </div>
    </div>
  </div>

  <!--TABELA DE DADOS-->
  <div class="table-responsive">
    <table id="tblExport" class="table table-hover table-sm table-bordered">

      <thead>
        <tr>
          <th class="tbGroups01 d-print-block" scope="col">Id</th>
          <th class="tbGroups02 d-print-block" scope="col">Imagem</th>
          <th class="tbGroups03 d-print-block" scope="col">qrCode</th>
          <th class="tbGroups04 d-print-block" scope="col">Descrição</th>
          <th class="tbGroups05 d-print-block" scope="col">Data de Lançamento</th>
          <th class="tbGroups06 d-print-block" scope="col">Usuário Lançamento</th>
          <th class="tbGroups07 d-print-block" scope="col">Email Lançamento</th>
          <th class="tbGroups08 d-print-block" scope="col" style="display: none;">Última Modificação</th>
          <th class="tbGroups09 d-print-block" scope="col" style="display: none;">Usuário Edição</th>
          <th class="tbGroups10 d-print-block" scope="col" style="display: none;">Email Edição</th>
          <th class="tbGroups11 d-print-block" scope="col">Ações</th>
        </tr>
      </thead>

      <tbody>
        {{#each groups}}

  <!--INFORMAÇÃOES PARA ADICIONAR NA REQUISIÇÃO-->
