          <tr>
            <th class="tbGroups01 d-print-block">{{_id}}</th>
            <td class="tbGroups02 d-print-block">
              <figure class="figure">
                <img src="{{image}}" class="figure-img img-fluid rounded" style="max-width: 4rem;"
                  alt="Imagem de um quadrado genérico com bordas arredondadas, em uma figure.">
                <!--<figcaption class="figure-caption">Uma legenda para a imagem acima.</figcaption>-->
              </figure>
            </td>

            <td class="tbGroups03 d-print-block">
              <figure class="figure">
                <img src="https://chart.googleapis.com/chart?chs=150x150&cht=qr&chl={{qrcode}}"
                  class="figure-img img-fluid rounded" style="max-width: 4rem;"
                  alt="Imagem de um quadrado genérico com bordas arredondadas, em uma figure.">
                <!--<figcaption class="figure-caption">Uma legenda para a imagem acima.</figcaption>-->
              </figure>
            </td>
            <td class="tbGroups04 d-print-block">{{description}}</td>
            <td class="tbGroups05 d-print-block">{{releaseDateOf}}</td>
            <td class="tbGroups06 d-print-block">{{user.name}}</td>
            <td class="tbGroups07 d-print-block">{{emailLaunch}}</td>
            <td class="tbGroups08 d-print-block" style="display: none;">{{editionDate}}</td>
            <td class="tbGroups09 d-print-block" style="display: none;">{{user.name}}</td>
            <td class="tbGroups10 d-print-block" style="display: none;">{{emailEdtion}}</td>

            <td class="tbGroups03 d-print-none">
              <div class="d-flex justify-content-center">
                {{#if ../ user.eDevAdmin}}
                <div class="liGroups11 p-0 mr-1">
                  <button id="updateDev" type="submit" class="mt-1 mb-1 btn btn-secondary btn-sm" data-toggle="tooltip"
                    data-placement="right" title="Inserir produto na solicitação atual">
                    <i class="fas fa-cart-arrow-down"></i></button>
                </div>

                <div class="liGroups11 p-0 mr-1">
                  <button id="saveDev" type="submit" class="mt-1 mb-1 btn btn-success btn-sm" data-toggle="tooltip"
                    data-placement="bottom" title="Dar entrada no Material">
                    <i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                </div>

                <div class="liGroups11 p-0 mr-1">
                  <a href="/groups/add_id/{{_id}}" class="mt-1 mb-1 btn btn-primary btn-sm" data-toggle="tooltip"
                    data-placement="left" title="Criar novo a partir dessas informações">
                    <i class="far fa-clone"></i>
                  </a>
                </div>

                <div class="liGroups11 p-0 mr-1">
                  <a href="/groups/edit/{{_id}}" class="mt-1 mb-1 btn btn-dark btn-sm" data-toggle="tooltip"
                    data-placement="bottom" title="Editar Produto">
                    <i class="fas fa-pen"></i>
                  </a>
                </div>

                <div class="liGroups11 p-0">
                  <a href="/groups/delete/{{_id}}" class="mt-1 mb-1 deletar btn btn-danger btn-sm" data-toggle="tooltip"
                    data-placement="bottom" title="Deletar Produto">
                    <i class="fas fa-trash-alt"></i>
                  </a>
                </div>
                {{else}}
                <div class="liGroups11 p-0 mr-1">
                  <a href="/groups/edit/{{_id}}" class="mt-1 mb-1 btn btn-primary btn-sm" data-toggle="tooltip"
                    data-placement="bottom" title="Editar Produto">
                    <i class="fas fa-pen"></i>
                  </a>
                </div>

                <div class="liGroups11 p-0">
                  <a href="/groups/delete/{{_id}}" class="mt-1 mb-1 deletar btn btn-danger btn-sm" data-toggle="tooltip"
                    data-placement="bottom" title="Deletar Produto">
                    <i class="fas fa-trash-alt"></i>
                  </a>
                </div>
                {{/if}}
              </div>

            </td>

          </tr>
        </form>
        {{else}}
        <h4 class="mt-12 mb-2">
          Nenhum Tipo Registrado!
        </h4>
        {{/each}}
      </tbody>

    </table>
  </div>

  <div class="d-flex d-print-none">
    <div class="mr-auto p-2">
      {{#if prev}}
      <button class="btn btn-primary btn-sm mt-2" onclick="navigate(-1)">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
        Anterior
      </button>
      {{/if}}
    </div>
    <div class="p-2">
      {{#if next}}
      <button class="btn btn-primary btn-sm mt-2" onclick="navigate(1)">
        Próximo
        <i class="fa fa-arrow-right" aria-hidden="true"></i>
      </button>
      {{/if}}
    </div>
  </div>
</div>