<style>
    body {
        color: aliceblue;
        background-image: url("/img/ferramentas11.jpg");
        width: 100%;
        height: 100%;
        background-position: 50% 50%;
        background-color: black;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        background-size: cover;
        -o-background-size: cover;
        background-repeat: no-repeat;
    }
    hr{
      border-color: #4b4b4bcc; 
    }
</style>
<div class="addgroups container mt-2">
    <h3>Crie um Grupo</h3>
    <hr>
    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}

    <form class="mt-2" method='post' enctype="multipart/form-data" action="/upload">
        <div class="row align-items-center">
            <!--<div class="form-group col-md-6" id="qrcode2" onchange="qrcodeFormat()">
            </div>-->
            <div class="form-group col-auto">
                <div class="text-center">
                    <img src="/img/logo8.png" class="avatar img-fluid rounded" alt="Responsive image" style="max-width: 8rem;">
                    <input type="file" accept="image/*" name="file" id="file"
                        class="custom-file-input btn-file text-center center-block file-upload">
                    <input type='submit' class='btn btn-primary' value='Upload de imagem'>
                </div>
            </div>
        </div>
        <hr>
    </form>
    <form action="/groups/groups/novo" method="POST">
        <div class="form-row">
            <div class="form-group col-md-12">
                <input type="hidden" class="form-control" id="id" name="id" placeholder="Id">
                <input type="hidden" class="form-control" id="qrcode" name="qrcode" placeholder="QrCode do group">
                <input type="hidden" class="form-control mt-2" name="image" id="image">
                <label for="description">Descrição:</label>
                <input type="text" class="form-control" id="description" name="description"
                    placeholder="Descrição do grupo" onkeyup="qrcodeFormat()">
            </div>
        </div>
        <input type="hidden" class="form-control" id="date" name="date" placeholder="date"
            value="{{#formatDate date}}{{/formatDate}}">
        <div class="form-row align-items-center">
           <!-- <div class="col-auto my-1">
                <select class="custom-select mr-sm-2" id="active" name="active">
                    <option Disabled selected>Ativar...</option>
                    <option value="true">Sim</option>
                    <option value="false">Não</option>
                </select>
            </div> -->
            
            <div class="col-auto my-1">
                <input type="hidden" class="form-control mt-2" name="tags" id="tags">
                <button type="submit" class="btn btn-success">Salvar <i class="fas fa-share"></i></button>
            </div>
        </div>
        <hr>
    </form>
</div>

<div class="mt-2"></div>