<div class="grupos container mt-2">
  <div class="card mb-3">
    <div class="row no-gutters">
      <div class="col-md-6">
        <img src="{{datasubgrupo.imagem}}" class="card-img" alt="...">
      </div>
      <div class="col-md-6">
        <div class="card-body">
          <h3 class="card-title">{{datasubgrupo.descricao}}</h3>
          <div class="form-admin col-md-6" id="qrcode2" onchange="qrcodeFormat()"></div>
         <h5 class="card-title mt-2">Grupo: {{datasubgrupo.grupo}}</h5>
          <p class="card-text mt-2">QrCode: {{datasubgrupo.qrcode}}</p>
          <p class="card-text"><small class="text-muted">Data de Criação: {{datasubgrupo.data}}</small></p>
            <input type="hidden" class="form-control" id="qrcode" name="qrcode" placeholder="QrCode do Grupo"
              value="{{datasubgrupo.qrcode}}">         
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>