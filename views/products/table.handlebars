<div class="mt-2 container-fluid">
  {{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
  {{else}}
  {{/each}}

  <div class="d-none d-md-none d-print-block">
    <div class="d-flex justify-content-center">

      <h3>Produtos</h3>
    </div>
  </div>
  <div class="d-none d-md-block d-print-none">
    <div class="d-flex justify-content-center">
      <div class="p-1 mr-auto">
        <h3>Produtos</h3>
      </div>

      <div class="p-0 mr-1">
        <a href="/products">
          <button type="button" class="btn btn-primary btn-sm">
            Lista
            <i class="fas fa-th-list"></i>
          </button>
        </a>
      </div>
      <div class="p-0 mr-1">
        <a href="/products/table">
          <button type="button" class="btn btn-primary btn-sm">
            Tabela
            <i class="fas fa-table"></i>
          </button>
        </a>
      </div>
      <div class="p-0">
        <a href="/products/create">
          <button class="mr-2 btn btn-success btn-sm" data-toggle="tooltip" data-placement="bottom" title="Cadastre ">
            Cadastre um novo Produto <i class="fas fa-paper-plane"></i>
          </button>
        </a>
      </div>
    </div>


    <div class="d-flex justify-content-center">
      <div class="p-1 mr-auto">
        <div class="form-group row">
          <label for="client" class="col-sm-7 col-form-label col-form-label-sm">Itens p/ página</label>
          <div class="col-sm-5">
            <select class="custom-select custom-select-sm" id="limit" name="limit" onchange="setLimit()">
              <option value="5" {{#if_eq limit 5}}selected{{/if_eq}}>5</option>
              <option value="10" {{#if_eq limit 10}}selected{{/if_eq}}>10</option>
              <option value="25" {{#if_eq limit 25}}selected{{/if_eq}}>25</option>
              <option value="50" {{#if_eq limit 50}}selected{{/if_eq}}>50</option>
              <option value="100" {{#if_eq limit 100}}selected{{/if_eq}}>100</option>
            </select>
          </div>
        </div>
      </div>
      <div class="p-1 ">
        <p><small>Visualizar Colunas</small></p>
      </div>
      <div class="p-1 ">

        <select class="custom-select custom-select-sm" name="SelectOptions" id="SelectOptions">
          <option selected disabled hidden>Escolha...</option>
          <option value="liProd01">Id</option>
          <option value="liProd02">imagem</option>
          <option value="liProd03">QrCode</option>
          <option value="liProd04">Descrição</option>
          <option value="liProd05">Grupo</option>
          <option value="liProd06">Subgrupo</option>
          <option value="liProd07">Tipo de Equipamento</option>
          <option value="liProd08">Data de Lançamento</option>
          <option value="liProd09">Usuário Lançamento</option>
          <option value="liProd10">Email Lançamento</option>
          <option value="liProd11">Data Edição</option>
          <option value="liProd12">Usuário Edição</option>
          <option value="liProd13">Email Edição</option>
          <option value="liProd14">Ações</option>
        </select>
      </div>

      <div class="p-1">
        <div class="input-group input-group-sm mb-3">
          <input type="text-sm" class="form-control" id="search" name="search" placeholder="Pesquise aqui...">
        </div>
      </div>

      <div class="p-1">
        <button type="button" class="btn btn-primary btn-sm" onclick="search()">
          <i class="fa fa-search" aria-hidden="true"></i>
        </button>
      </div>

    </div>
  </div>



  <div class="d-block d-md-none d-print-none">
    <div class="d-flex justify-content-center">
      <h3>Produtos</h3>
      <hr>
    </div>

    <div class="d-flex justify-content-center">
      <a href="/products/create">
        <button class="mr-2 btn btn-success btn-sm" data-toggle="tooltip" data-placement="bottom"
          title="Cadastre um novo Poduto">
          Cadastre um novo Produto <i class="fas fa-paper-plane"></i>
        </button>
      </a>
    </div>


    <div class="d-flex justify-content-center">
      <div class="p-1">
        <div class="input-group input-group-sm mb-3">
          <input type="text-sm" class="search form-control" id="searchMobile" name="searchMobile"
            placeholder="Pesquise aqui..." onchange="this.value=this.value.toLowerCase()" />
        </div>
      </div>

      <div class="p-1 ">
        <button type="button" class="btn btn-primary btn-sm" onclick="search()">
          <i class="fa fa-search" aria-hidden="true"></i>
        </button>
      </div>
    </div>


    <div class="d-flex justify-content-center">
      <div class="p-1">
        <label for="client" class="col-sm-7 col-form-label col-form-label-sm">Itens p/ página</label>
        <div class="col-sm-5">
          <select class="custom-select custom-select-sm" id="limitMobile" name="limitMobile" onchange="setLimit()">
            <option value="5" {{#if_eq limit 5}}selected{{/if_eq}}>5</option>
            <option value="10" {{#if_eq limit 10}}selected{{/if_eq}}>10</option>
            <option value="25" {{#if_eq limit 25}}selected{{/if_eq}}>25</option>
            <option value="50" {{#if_eq limit 50}}selected{{/if_eq}}>50</option>
            <option value="100" {{#if_eq limit 100}}selected{{/if_eq}}>100</option>
          </select>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <div class="p-1 ">
        <select class="custom-select custom-select-sm" name="SelectOptionsMobile" id="SelectOptionsMobile">
          <option selected disabled hidden>Escolha...</option>
          <option value="liProd01">Id</option>
          <option value="liProd02">imagem</option>
          <option value="liProd03">QrCode</option>
          <option value="liProd04">Descrição</option>
          <option value="liProd05">Grupo</option>
          <option value="liProd06">Subgrupo</option>
          <option value="liProd07">Tipo de Equipamento</option>
          <option value="liProd08">Data de Lançamento</option>
          <option value="liProd09">Usuário Lançamento</option>
          <option value="liProd10">Email Lançamento</option>
          <option value="liProd11">Data Edição</option>
          <option value="liProd12">Usuário Edição</option>
          <option value="liProd13">Email Edição</option>
          <option value="liProd14">Ações</option>
        </select>
      </div>
    </div>
  </div>

  <!--TABELA DE DADOS-->
  <div class="table-responsive">
    <table id="tblExport" class="table table-hover table-sm table-bordered">

      <thead>
        <tr>
          <th class="liProd01 d-print-block" scope="col">Id</th>
          <th class="liProd02 d-print-block" scope="col">Imagem</th>
          <th class="liProd03 d-print-block" scope="col">qrCode</th>
          <th class="liProd04 d-print-block" scope="col">Descrição</th>
          <th class="liProd05 d-print-block" scope="col">Grupo</th>
          <th class="liProd06 d-print-block" scope="col">Subgrupo</th>
          <th class="liProd07 d-print-block" scope="col">Tipo de Equipamento</th>
          <th class="liProd08 d-print-block" scope="col">Data de Lançamento</th>
          <th class="liProd09 d-print-block" scope="col">Usuário Lançamento</th>
          <th class="liProd10 d-print-block" scope="col">Email Lançamento</th>
          <th class="liProd11 d-print-block" scope="col">Última Modificação</th>
          <th class="liProd12 d-print-block" scope="col">Usuário Edição</th>
          <th class="liProd13 d-print-block" scope="col">Email Edição</th>
          <th class="liProd14 d-print-block" scope="col">Ações</th>
        </tr>
      </thead>

      <tbody>
        {{#each products}}
        <tr>
          <th class="liProd01 d-print-block">{{_id}}</th>
          <td class="liProd02 d-print-block">
            <figure class="figure">
              <img src="{{image}}" class="figure-img img-fluid rounded" style="max-width: 3rem;"
                alt="Imagem de um quadrado genérico com bordas arredondadas, em uma figure.">
              <!--<figcaption class="figure-caption">Uma legenda para a imagem acima.</figcaption>-->
            </figure>
          </td>

          <td class="liProd11 d-print-block">
            <figure class="figure">
              <img src="https://chart.googleapis.com/chart?chs=150x150&cht=qr&chl={{_id}}"
                class="figure-img img-fluid rounded" style="max-width: 4rem;"
                alt="Imagem de um quadrado genérico com bordas arredondadas, em uma figure.">
              <!--<figcaption class="figure-caption">Uma legenda para a imagem acima.</figcaption>-->
            </figure>
          </td>
          <td class="liProd04 d-print-block">{{description}}</td>
          <td class="liProd05 d-print-block">{{group.description}}</td>
          <td class="liProd06 d-print-block">{{subgroup.description}}</td>
          <td class="liProd07 d-print-block">{{type.description}}</td>
          <td class="liProd08 d-print-block">{{createdAt}}</td>
          <td class="liProd09 d-print-block">{{created.description}}</td>
          <td class="liProd10 d-print-block">{{emailCreated}}</td>
          <td class="liProd11 d-print-block">{{updatedAt}}</td>
          <td class="liProd12 d-print-block">{{updated.description}}</td>
          <td class="liProd13 d-print-block">{{emailUpdated}}</td>

          <td class="liProd14 d-print-none">
            <div class="d-flex justify-content-center">
              <div class="liTypes14 p-0 mr-1">
                <a href="/products/update/{{_id}}" class="mt-1 mb-1 btn btn-primary btn-sm" data-toggle="tooltip"
                  data-placement="bottom" title="Editar Grupo">
                  <i class="fas fa-pen"></i>
                </a>
              </div>

              <div class="liTypes14 p-0">
                <a href="/products/delete/{{_id}}" class="mt-1 mb-1 deletar btn btn-danger btn-sm" data-toggle="tooltip"
                  data-placement="bottom" title="Deletar Grupo">
                  <i class="fas fa-trash-alt"></i>
                </a>
              </div>

            </div>

          </td>

        </tr>
        </form>
        {{else}}
        <h4 class="mt-12 mb-2">
          Nenhum Produto Registrado!
        </h4>
        {{/each}}
      </tbody>

    </table>
  </div>

  <div class="d-flex d-print-none">
    <div class="mr-auto p-2">
      {{#if prev}}
      <button class="btn btn-primary btn-sm mt-2" onclick="navigate(-1)">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
        Anterior
      </button>
      {{/if}}
    </div>
    <div class="p-2">
      {{#if next}}
      <button class="btn btn-primary btn-sm mt-2" onclick="navigate(1)">
        Próximo
        <i class="fa fa-arrow-right" aria-hidden="true"></i>
      </button>
      {{/if}}
    </div>
  </div>
</div>