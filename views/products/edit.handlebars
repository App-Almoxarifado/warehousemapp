<div class="bgType">
    <div class="type container">

        {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
        {{else}}

        {{/each}}

        <div class="cardLogin card ">
            <div class="card-body">
                <div class="d-flex justify-content-center">
                    <h3>Editar um Produto
                    </h3>
                </div>
                <hr>
                <form action="/products/edit" enctype="multipart/form-data" method="POST">
                    <div class="d-flex justify-content-center">
                        <img src="{{product.image}}" class="avatar img-fluid rounded" alt="" style="width: 10rem;">
                    </div>
                    <div class="d-flex p-1 justify-content-center">

                        <input type="file" accept="image/*" name="file" id="file"
                            class="btn-file text-center center-block file-upload">
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="form-group col-md-12">
                            <input type="hidden" class="form-control" id="id" name="id" placeholder="Id"
                                value="{{product._id}}">
                            <input type="hidden" class="form-control mt-2" name="image" id="image">
                            <label for="name">Descrição:</label>
                            <input type="text" class="form-control" id="name" name="name"
                                placeholder="Descrição do tipo" value="{{product.name}}">
                            <label for="capacityReach">Capacidade/Alcance:</label>
                            <input type="text" class="form-control" id="capacityReach" name="capacityReach"
                                placeholder="Descrição do tipo" value="{{product.capacityReach}}">
                        </div>
                    </div>
                    <!--CONTROLE DE USUÁRIOS LANÇAMENTO -->
                    <input type="hidden" class="form-control mt-2" name="userCreated" id="userCreated"
                        value="{{product.userCreated}}">
                    <input type="hidden" class="form-control mt-2" name="emailCreated" id="emailCreated"
                        value="{{product.emailCreated}}">
                    <input type="hidden" class="form-control mt-2" name="createdAt" id="createdAt"
                        value="{{product.createdAt}}">
                    <!--CONTROLE DE USUÁRIOS -->
                    <input type="hidden" class="form-control mt-2" name="userUpdated" id="userUpdated"
                        value="{{user.name}}">
                    <input type="hidden" class="form-control mt-2" name="emailUpdated" id="emailUpdated"
                        value="{{user.email}}">

                    <div class="d-flex justify-content-center">
                        <div class="form-group col-md-12 text-center">
                            <input type='submit' class='mt-1 btn btn-success btn-sm' value='Salvar'>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>