<div class="container mt-2">
  <h2>Produtos</h2>
  <a href="/products/products/add"><button class="btn btn-success">Crie um Grupo <i
        class="fas fa-share"></i></button></a>

  <hr>
  <a href="/products/products"><button type="button" class="btn btn-primary">Lista <i
        class="fas fa-th-list"></i></button></a>
  <a href="/products/productstables"><button type="button" class="btn btn-primary">Tabela <i
        class="fas fa-table"></i></button></a>

  <hr>

  <table id="example" class="table table-bordered text-center" style="width:100%">
    <thead>
      <tr>
        <th scope="col">Imagem</th>
        <th scope="col">Descrição</th>
        <th scope="col">Código QrCode</th>
        <th scope="col">Data de Criação</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <th scope="row"><img src="{{image}}" style="max-width: 6rem;" class=" img-fluid rounded" alt="Responsive image">
        </th>
        <td>{{description}}</td>
        <td><img src="https://chart.googleapis.com/chart?chs=150x150&cht=qr&chl={{qrcode}}" style="width: 4rem;"
            class=" img-fluid rounded" alt="Responsive image"></td>
        <td>{{date}}</td>
        <td>
        <a href="/products/products/add_id/{{_id}}" class="btn btn-primary btn-sm mt-2">
          <i class="fa fa-paper-plane" aria-hidden="true"></i></a>
        <a href="/products/products/take/{{_id}}" class="btn btn-dark btn-sm mt-2"> <i class="fas fa-align-right"></i></a>
        <a href="/products/products/edit/{{_id}}"><button class="btn btn-secondary btn-sm mt-2"> <i
              class="fas fa-pen"></i></button></a>
        <a href="/products/products/delete/{{_id}}"><button class="deletar btn btn-danger btn-sm mt-2"><i
              class="fas fa-trash-alt"></i></button></a>
        </td>
      </tr>
      {{else}}
      <h4 class="mt-2">Nenhum Produto Registrado!</h4>
      {{/each}}
    </tbody>
  </table>

<div class="form-row">
        <div class="form-group col-md-6 text-left">
          {{#if prev }}
          <button class="btn btn-primary btn-sm mt-2" onclick="navigate(-1)">
            <i class="fa fa-arrow-left" aria-hidden="true"></i> Anterior</button>
          {{/if}}
        </div>
        <div class="form-group col-md-12 text-right">
          {{#if next }}
          <button class="btn btn-primary btn-sm mt-2" onclick="navigate(1)">Próximo 
            <i class="fa fa-arrow-right" aria-hidden="true"></i></button>
          {{/if}}
        </div>
 </div>  


</div>