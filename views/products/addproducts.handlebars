<div class="addsubgroups container mt-2">
    <h3>Novo Produto:</h3>
    <hr>
    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}

    <form class="mt-2" method='post' enctype="multipart/form-data" action="/upload">
        <div class="row align-items-center">
            <!--<div class="form-group col-md-6" id="qrcode2" onchange="qrcodeFormat()">
            </div>-->
            <div class="form-group col-auto">
                <div class="text-center">
                    <img src="/img/logo8.png" class="avatar img-fluid rounded" alt="Responsive image" style="width: 8rem;">
                    <input type="file" accept="image/*" name="file" id="file"
                        class="custom-file-input btn-file text-center center-block file-upload">
                    <input type='submit' class='btn btn-primary' value='Upload de imagem'>
                </div>
            </div>
        </div>
        <hr>
    </form>
            <form action="/products/products/new" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <input type="hidden" class="form-control" id="id" name="id" placeholder="Id">
                        <input type="hidden" class="form-control" id="qrcode" name="qrcode"
                            placeholder="QrCode do group">
                        <input type="hidden" class="form-control mt-2" name="image" id="image">
                        <input type="hidden" class="form-control" name="image" id="image">

                        <label for="group">Grupo:</label>
                        <select 
                            class="custom-select" id="group" name="group" 
                            onchange="location.assign('?gId='+document.getElementById('group').value)"
                        >
                            <option selected disabled value="">Selecione...</option>
                            {{#each groups}}
                                <option 
                                    {{#if_eq ../idGroup _id}}selected{{/if_eq}} 
                                    value="{{_id}}"
                                >
                                    {{description}}
                                </option>
                            {{else}}
                            <option value="0">Nenhum grupo registrado</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="subgroup">Subgrupo:</label>
                        <select class="custom-select" id="subgroup" name="subgroup">
                            <option selected disabled value="">Selecione...</option>
                            {{#each subgroups}}
                                <option value="{{_id}}">{{description}}</option>
                            {{else}}
                            <option value="0">Nenhum Subgroup registrado</option>
                            {{/each}}
                        </select>
                    </div>
                </div>


                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="description">Descrição:</label>
                        <input type="text" class="form-control" id="description" name="description"
                            placeholder="Descrição do group" onkeyup="qrcodeFormat()">
                    </div>
                </div>

                <input type="hidden" class="form-control" id="date" name="date" placeholder="date"
                    value="{{#formatDate date}}{{/formatDate}}">
                <div class="form-group col-md-12">
                    <div class="form-row">
                        <button type="submit" class="btn btn-success"><i class="fas fa-share"></i></button>
                    </div>
                </div>
                <hr>
            </form>
        </div>
