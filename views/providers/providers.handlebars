<div class="container mt-2">
  <h2>Fornecedores</h2>
  <a href="/providers/providers/add"><button class="btn btn-success">Cadastre um Fornecedor <i
        class="fas fa-share"></i></button></a>

  <hr>
  <a href="/providers/providers/"><button type="button" class="btn btn-primary">Lista <i
        class="fas fa-th-list"></i></button></a>
  <a href="/providers/providerstables/"><button type="button" class="btn btn-primary">Tabela <i
        class="fas fa-table"></i></button></a>

  <hr>

  <!--VIZULIZAÇÃO EM LISTA-->


  {{#each providers}}
  <div class="row no-gutters position-relative">
    <div class="col-md-3 mb-md-0 p-md-4">
      <img src="{{image}}" style="width: 200px;" class="mr-3" alt="...">
    </div>


    <div class="col-md-6 position-static p-4 pl-md-0">
      <h5 class="mt-0">{{name}}</h5>
      <h6 class="card-text"><small>Serviço: {{service}}</small></h6>
      <h6 class="card-text">Email: {{email}}</h6>
      <a href="/providers/providers/take/{{_id}}" class="btn btn-dark mt-2"><i class="fas fa-align-right"></i></a>
      <a href="/providers/providers/edit/{{_id}}"><button class="btn btn-primary mt-2"><i
            class="fas fa-pen"></i></button></a>
      <a href="/providers/providers/deletar/{{_id}}"><button class="deletar btn btn-danger mt-2"><i
            class="fas fa-trash-alt"></i></button></a>
    </div>
  </div>


  <hr>
  {{else}}
  <h4 class="mt-2 mb-2">Nenhum Fornecedor Registrado!</h4>
  {{/each}}
  <nav class="px-md-2 mt-2" aria-label="Navegação de página exemplo">
    <ul class="pagination">
      {{#if prev}}
      <li class="page-item"><a class="page-link" href="{{prev}}">Anterior</a></li>
      {{/if}}
      {{#paginate}}
      <li class="page-item"><a class="page-link" href="{{link}}">{{number}}</a></li>
      {{/paginate}}
      <li class="page-item"><a class="page-link" href="{{next}}">Próximo</a></li>
    </ul>
  </nav>
</div>
</div>