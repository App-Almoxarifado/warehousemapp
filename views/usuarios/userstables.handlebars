<div class="container mt-2">
    <h2>Usuários</h2>
    <a href="/usuarios/registro"><button class="btn btn-success">Crie um Usuário <i
                class="fas fa-share"></i></button></a>

    <hr>
    <a href="/usuarios/users"><button type="button" class="btn btn-primary">Lista <i
                class="fas fa-th-list"></i></button></a>
    <a href="/usuarios/userstables"><button type="button" class="btn btn-primary">Tabela <i
                class="fas fa-table"></i></button></a>

    <hr>

    <table id="example" class="table table-bordered text-center" style="width:100%">
        <thead>
            <tr>
                <th scope="col">Imagem</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">QrCode</th>
                <th scope="col">Data de Criação</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each usuarios}}
            <tr>
                <th scope="row"><img src="{{image}}" class="card-img-top" style="max-width: 6rem;" alt="..."></th>
                <td>{{nome}}</td>
                <td>{{email}}</td>
                <td><img src="https://chart.googleapis.com/chart?chs=150x150&cht=qr&chl={{qrcode}}" class="card-img-top" style="max-width: 6rem;" alt="..."></td>
                <td>{{date}}</td>
                <td>
                    <a href="/usuarios/users/take/{{_id}}" class="btn btn-dark mt-2"><i
                            class="fas fa-align-right"></i></a>
                    <a href="/usuarios/users/edit/{{_id}}"><button class="btn btn-primary mt-2"><i
                                class="fas fa-pen"></i></button></a>
                    <a href="/usuarios/users/delete/{{_id}}"><button class="deletar btn btn-danger mt-2"><i
                                class="fas fa-trash-alt"></i></button></a>
                </td>
            </tr>
            {{else}}
            <h4 class="mt-2">Nenhum Grupo Registrado!</h4>
            {{/each}}
        </tbody>
    </table>
</div>
<nav class="mt-2" aria-label="Navegação de página exemplo">
    <ul class="pagination">
        {{#if prev}}
        <li class="page-item"><a class="page-link" href="{{prev}}">Anterior</a></li>
        {{/if}}
        {{#paginate}}
        <li class="page-item"><a class="page-link" href="{{link}}">{{number}}</a></li>
        {{/paginate}}
        <li class="page-item"><a class="page-link" href="{{next}}">Próximo</a></li>
    </ul>
</nav>


<div class="mt-2"></div>