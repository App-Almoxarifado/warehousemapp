<div class="bgLogin">
    <div class="userlogin container mt-5">

        {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
        {{else}}

        {{/each}}

        <div class="card">
    <div class="card-body">
      <h3>Login:</h3>
      <form class="mt-5" action="/usuarios/login" method="POST">
        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="descricao">Email:</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Digite o seu email" required>
          </div>
          <div class="form-group col-md-12 ">
            <label for="descricao">Senha:</label>
            <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite a sua senha:"
              required>
          </div>
        </div>
        <div class="d-flex">
          <div class="mr-auto p-2">
            <button type="submit" class="btn btn-success">Entrar </button>
          </div>
          <div class="p-2">
            <a style="color: white; font-size: 25px" href="/usuarios/registro">Crie sua Conta </a>
          </div>
        </div>
      </form>
    </div>
  </div>
    </div>
</div>