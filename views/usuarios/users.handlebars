<div class="container mt-2">
  <h2>Usuarios</h2>
  <a href="/usuarios/registro"><button class="btn btn-success">Crie um Usuario <i class="fas fa-share"></i></button></a>

  <hr>
  <a href="/usuarios/users"><button type="button" class="btn btn-primary">Lista <i
        class="fas fa-th-list"></i></button></a>
  <a href="/usuarios/userstables"><button type="button" class="btn btn-primary">Tabela <i
        class="fas fa-table"></i></button></a>
  <a href="/usuarios/usersfull"><button type="button" class="btn btn-primary">Área Restrita <i class="fas fa-ban"></i>
    </button></a>
  <hr>

  <!--VIZULIZAÇÃO EM LISTA-->
  <div id="card" class="card-deck mt-2" style='display: block;'>
    {{#each usuarios}}
    <div class="card-deck mt-3">
      <img src="{{image}}" class=" img-fluid rounded" alt="Responsive image" style="width: 8rem;">
      <div id="card2" class="card-body">
        <h4>{{nome}}</h4>
        <div class="form-admin col-md-6" id="qrcode2" onchange="qrcodeFormat()"></div>
        <h6 class="card-text"><small class="text-muted">Código QrCode: {{email}}</small></h6>
        <h6 class="card-text"><small class="text-muted">Código QrCode: {{sites.description}}</small></h6>
        <h6 class="card-text">Data de Registro: {{date}}</h6>
      </div>
    </div>
    <hr>
    {{else}}
    <h4 class="mt-2 mb-2">Nenhum Usuário Registrado!</h4>
    {{/each}}
    <nav class="px-md-2 mt-2" aria-label="Navegação de página exemplo">
      <ul class="pagination">
        {{#if prev}}
        <li class="page-item"><a class="page-link" href="{{prev}}">Anterior</a></li>
        {{/if}}
        {{#paginate}}
        <li class="page-item"><a class="page-link" href="{{link}}">{{number}}</a></li>
        {{/paginate}}
        <li class="page-item"><a class="page-link" href="{{next}}">Próximo</a></li>
      </ul>
    </nav>
  </div>
</div>