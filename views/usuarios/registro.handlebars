<div class="bgRegister">
    <div class="user container">
        {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
        {{else}}

        {{/each}}
        <div class="card">
            <div class="card-body">
                <h3>Crie sua Conta:</h3>
                <form method='post' enctype="multipart/form-data" action="/upload">
                    <div class="form-row">
                        <div style="display: none;" class="form-group col-md-6" id="qrcode2" onchange="qrcodeFormat()">
                        </div>
                        <div class="form-group col-md-12">
                            <div class="text-center">
                                <img src="/img/avatar.png" style="width: 150px;" class="avatar img-circle img-thumbnail"
                                    alt="">
                                <input type="file" accept="image/*" name="file" id="file"
                                    class="custom-file-input btn-file text-center center-block file-upload">
                                <input type='submit' class='btn btn-primary' value='Upload de Imagem'>
                            </div>
                        </div>
                    </div>
                </form>
                <form action="" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <input type="hidden" class="form-control" id="id" name="id" placeholder="Id">
                            <input type="hidden" class="form-control" id="qrcode" name="qrcode"
                                placeholder="QrCode do group">
                            <input type="hidden" class="form-control mt-2" name="image" id="image">
                            <label for="nome">Nome:</label>
                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome:"
                                required onkeyup="qrcodeFormatUser()">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="Digite o seu email" required>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="senha">Senha:</label>
                            <input type="password" class="form-control" id="senha" name="senha"
                                placeholder="Digite a sua senha:" required>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="descricao">Repita a sua senha:</label>
                            <input type="password" class="form-control" id="senha2" name="senha2"
                                placeholder="Repita a sua senha:" required>
                        </div>

                    </div>
                    <input type="hidden" class="form-control" id="date" name="date" placeholder="date"
                        value="{{#formatDate date}}{{/formatDate}}">
                    <div class="form-row">
                        <div class="form-group col-md-12 text-center">
                            <button type="submit" class="btn btn-primary">Criar Conta <i
                                    class="fas fa-share"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>