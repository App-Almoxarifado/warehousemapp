<div class="bgRegister">
    <div class="user container">

        {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
        {{else}}

        {{/each}}
        <div class="cardLogin card">
            <div class="card-body">
                <h4>Crie sua Conta:</h4>
                <form method='post' enctype="multipart/form-data" action="/upload">
                    <div class="d-flex justify-content-center">
                        <div class="form-group col-md-12">
                            <div class="text-center">
                                <img src="https://warehousemapp.s3.amazonaws.com/avatar.png" style="width: 100px;" class="avatar img-circle img-thumbnail"
                                    alt="">
                                <input type="file" accept="image/*" name="file" id="file"
                                    class="custom-file-input btn-file text-center center-block file-upload">
                                <div class="d-flex mt-2 justify-content-center">
                                    <input type='submit' class='btn btn-primary' value='Upload'>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <form action="" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="client">Site:</label>
                            <select class="custom-select" id="sites" name="sites" required>
                                <option selected disabled value="">Selecione...</option>
                                {{#each customers}}
                                <option value="{{_id}}">{{description}}</option>
                                {{else}}
                                <option value="0">Nenhum site registrado</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <input type="hidden" class="form-control" id="id" name="id" placeholder="Id">
                            <input type="hidden" class="form-control mt-2" name="image" id="image">
                            <input type="hidden" class="nomeUser form-control mt-2" name="nome" id="nome">
                            <label for="name">Nome:</label>
                            <select class="nameUser custom-select" id="name" name="name">
                                <option selected disabled value="">Selecione...</option>
                                {{#each collaborators}}
                                <option value="{{_id}}">{{name}}</option>
                                {{else}}
                                <option value="0">Nenhum Colaborador registrado</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="Digite o seu email" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <label for="senha">Senha:</label>
                            <input type="password" class="form-control" id="senha" name="senha"
                                placeholder="Digite a sua senha:" required>
                        </div>
                        <div class="form-group col-6">
                            <label for="descricao">Repita a sua senha:</label>
                            <input type="password" class="form-control" id="senha2" name="senha2"
                                placeholder="Repita a sua senha:" required>
                        </div>
                    </div>
            </div>
            <input type="hidden" class="form-control" id="date" name="date" placeholder="date"
                value="{{#formatDate date}}{{/formatDate}}">
            <div class="form-row">
                <div class="form-group col-md-12 text-center">
                    <button type="submit" class="btn btn-primary">Criar Conta <i class="fas fa-share"></i></button>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>