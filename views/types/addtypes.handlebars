<div class="bgType">
    <div class="type container">

    <div class="card">
        {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
        {{else}}

        {{/each}}

        <div class="cardLogin card ">
            <div class="card-body">
                <div class="d-flex justify-content-center">
                <h3>Cadastre um Tipo</h3>
                </div>
                <hr>
                <form method='post' enctype="multipart/form-data" action="/upload">
                    <div class="d-flex justify-content-center">
                        <img src="/img/logo8.png" class="avatar img-fluid rounded" alt="" style="width: 10rem;">
                    </div>
                    <div class="d-flex p-1 justify-content-center">
                        <input type='submit' class='mt-1 btn btn-primary btn-sm' value='Salvar Imagem'>
                        <input type="file" accept="image/*" name="file" id="file"
                            class="btn-file text-center center-block file-upload">

                    </div>
                </form>
                <form action="/types/add" method="POST">
                    <div class="d-flex justify-content-center">
                        <div class="form-group col-md-12">
                            <input type="hidden" class="form-control" id="id" name="id" placeholder="Id">
                            <input type="hidden" class="form-control" id="qrcode" name="qrcode"
                                placeholder="Código Qr code">
                            <input type="hidden" class="form-control mt-2" name="image" id="image">
                            <label for="description">Descrição:</label>
                            <input type="text" class="form-control" id="description" name="description"
                                placeholder="Descrição do tipo">
                        </div>
                    </div>

                    <!--CONTROLE DE USUÁRIOS LANÇAMENTO -->
                    <input type="hidden" class="form-control mt-2" id="releaseDateOf" name="releaseDateOf"
                        placeholder="date" value="{{#formatDate date}}{{/formatDate}}">
                    <input type="hidden" class="form-control mt-2" name="userLaunch" id="userLaunch"
                        value="{{user.name}}">
                    <input type="hidden" class="form-control mt-2" name="emailLaunch" id="emailLaunch"
                        value="{{user.email}}">
                    <!--CONTROLE DE USUÁRIOS -->
                    <input type="hidden" class="form-control mt-2" id="editionDate" name="editionDate"
                        placeholder="date" value="{{#formatDate date}}{{/formatDate}}">
                    <input type="hidden" class="form-control mt-2" name="userEdtion" id="userEdtion"
                        value="{{user.name}}">
                    <input type="hidden" class="form-control mt-2" name="emailEdtion" id="emailEdtion"
                        value="{{user.email}}">

                    <div class="d-flex justify-content-center">
                        <div class="form-group col-md-12 text-center">
                            <button type="submit" class="btn btn-success" data-toggle="tooltip" data-placement="bottom"
                                title="Salva os dados do formulário no banco de dados">Salvar <i
                                    class="fas fa-share"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>