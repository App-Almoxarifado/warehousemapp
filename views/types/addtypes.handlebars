<div class="d-flex p-2 mw-100 justify-content-center">
    <form class="mt-2" method='post'  action="/upload">
        <div class="p-0 text-center">
                    <img src="/img/logo8.png" class="avatar img-fluid rounded" alt="Responsive image" style="width: 8rem;">
                    <input type="file" accept="image/*" name="file" id="f"
                        class="custom-file-input btn-file text-center center-block file-upload" multiple="multiplique">
        </div>
        <div class="p-2 text-center">
                    <input type='submit' class='btn btn-primary' value='Upload'>
        </div>  
        </div>     
    </form>
